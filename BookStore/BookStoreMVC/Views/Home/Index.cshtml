@{
    ViewBag.Title = "Book Store";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/IndexStyle.css" />
    <link rel="icon" type="favicon" href="~/Content/assets/img/log.png" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store</title>
</head>
<body>
    <header id="mainHeader">
        <div id="leftPart">
            <div id="menu">
                <div class="dropdown">
                    <button class="dropbtn"><img src="~/Content/assets/img/menu.png" /></button>
                    <div class="dropdown-content">
                        <a href="#">Home</a>
                        <a href="#">Catalogue</a>
                        <a href="#">About</a>
                    </div>
                </div>
            </div>  
        </div>
           <div class="a" id="logo">
              <img src="~/Content/assets/img/log.png" alt="Book Store logo" width="100px" />
            </div>
        
                <div class="a" id="rightPart">
                    <div class="a" id="register">
                        <a href="#" id="sup" class="a btn btn-primary btn-primary"><span class="glyphicon glyphicon-pencil"></span> SIGN UP</a>
                        <a href="#" id="sin" class="a btn btn-primary btn-primary"><span class="glyphicon glyphicon-log-in"></span> SIGN IN</a>
                    </div>
                </div>
            </header>
            <div id="container" class="a">
                <div id="center" class="a">
                    <h1>Welcome To The Book Store</h1>
                    <h2>The only important thing in a book is the meaning that it has for you.</h2>
                    <div class="a searchbar">
                        <div class="col-xs-8 col-xs-offset-2">
                            <div class="input-group">
                                <div class="input-group-btn search-panel">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                        <span id="search_concept">Filter by</span> <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#contains">Contains</a></li>
                                        <li><a href="#its_equal">It's equal</a></li>
                                        <li><a href="#greather_than">Greather than ></a></li>
                                        <li><a href="#less_than">Less than < </a></li>
                                        <li class="divider"></li>
                                        <li><a href="#all">Anything</a></li>
                                    </ul>
                                </div>
                                <input type="hidden" name="search_param" value="all" id="search_param">
                                <input type="text" class="form-control" name="x" placeholder="Search Books...">
                                <span class="input-group-btn">
                                    <button id="btn" class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"> Search</span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="booksrnd">
                    <div id="center_content">
                        <div id="first" class="vert_line">
                            <div>
                                <img src="~/Content/assets/img/cc.jpg">
                                <h4>Title of Book</h4>
                                <br><p>Price 1200dr.</p></br>
                                <a href=""><span>more</span></a>
                            </div>
                        </div>
                        <div id="second" class="vert_line">
                            <img src="~/Content/assets/img/ms.jpg">
                            <h4>Title of Book</h4>
                            <br><p>Price 1500dr.</p></br>
                           
                        </div>
                        <div>
                            <div id="third" class="vert_line">
                                <img src="~/Content/assets/img/as.jpg">
                                <h4>Title of Book</h4>
                                <br><p>Price 1400dr.</p></br>
                                
                            </div>
                        </div>
                        <div>
                            <div id="fourth">
                                <img src="~/Content/assets/img/ms.jpg">
                                <h4>Title of Book</h4>
                                <br><p>Price 1500dr.</p></br>
                                <a href=""><span>more</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    <footer>
        <div id="copyright">
            <p>&copy; @DateTime.Now.Year - Book Store by Hakob MKR, within VOLO CBC</p>
        </div>
    </footer>
</body>
</html>